generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id           String   @id @default(cuid())
  prompt       String
  platform     String
  content      String
  status       String   @default("pending") // pending | posted | failed
  scheduledFor DateTime
  postedAt     DateTime?
  createdAt    DateTime @default(now())
}
